@using TXSystem.Domain.Enums
@model TXSystem.Domain.Models.TableInfo

<h1>Прибутки</h1>

<div class="footer-buttons">
    <a class="btn btn-dark" asp-controller="Incomes" asp-action="ListTaxes">До податків</a>
</div>

<div class="card">
    <form method="post" asp-action="AddIncome">
        <legend>Зареєструвати прибуток</legend>
        <label class="form-label">
            Person ID
            <input class="form-control"type="number" id="PersonId" name="PersonId" value="1" min="1" max="25"/>
        </label>
        <label class="form-label">
            Source
            <select class="form-select" name="Source">
                @foreach (var option in Enum.GetValues<IncomeSource>())
                {
                    <option value="@option.ToString()">@option.ToString()</option>
                }
            </select>
        </label>
        <label class="form-label">
            Type
            <select class="form-select" name="Type">
                @foreach (var option in Enum.GetValues<IncomeType>())
                {
                    <option value="@option.ToString()">@option.ToString()</option>
                }
            </select>
        </label>
        <label class="form-label">
            Amount
            <input class="form-control"type="number" id="Amount" name="Amount" value="1" min="1" max="10000000"/>
        </label>
        <button type="submit" class="btn btn-success">Додати</button>
    </form>
</div>

<br/>

<table class="table table-striped table-dark table-hover table-bordered">
    <thead>
    <tr>
        @foreach (var column in Model.Columns)
        {
            <th scope="col">@column</th>
        }
    </tr>
    </thead>
    <tbody>
    @foreach (var row in Model.Data)
    {
        <tr>
            @foreach (var item in row)
            {
                <td>@item</td>
            }
        </tr>
    }
    </tbody>
</table>